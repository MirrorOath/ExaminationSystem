<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="dao.tables" auto-import="true">
    <class name="Teacher">
        <!-- 主键 ，映射-->
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name" type="string" />
        <property name="password" column="password" type="string" />
        <property name="sex" column="sex" />
        <property name="age" column="age" />
        <property name="department" column="department" type="string" />
        <property name="profession" column="profession" type="string" />
        <property name="authority" column="authority" />
        <property name="note" column="note" type="string" />
    </class>
</hibernate-mapping>
